{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "no-param-reassign": "off",
    "import/extensions": "off",
    "import/no-relative-package": "off",
    "import/no-relative-packages": "off"
  },
  "ignorePatterns": [
    "src/index.js",
    "/dist"
  ]
}
